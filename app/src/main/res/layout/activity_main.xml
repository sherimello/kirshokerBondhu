<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:cardElevation="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:translationZ="0.1dp"
                app:elevation="0dp">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/collapsing_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:collapsedTitleGravity="end"
                    app:collapsedTitleTextAppearance="@style/TextAppearance.Expanded"
                    app:contentScrim="?attr/colorPrimary"
                    app:expandedTitleGravity="top"
                    app:expandedTitleMarginStart="17dp"
                    app:expandedTitleMarginTop="49dp"
                    app:expandedTitleTextAppearance="@style/TextAppearance.Collapsed"
                    app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                    app:title="Welcome Sheri">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bottom_left_curve">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="11dp"
                            android:layout_marginTop="100dp"
                            android:layout_marginRight="11dp"
                            android:layout_marginBottom="100dp"
                            app:cardBackgroundColor="#00ffffff"
                            app:cardCornerRadius="11dp"
                            app:cardElevation="0dp"
                            app:layout_collapseMode="parallax">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cardView2"
                                    android:layout_width="41dp"
                                    android:layout_height="41dp"
                                    android:layout_marginTop="11dp"
                                    app:cardCornerRadius="1000dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0"
                                    app:layout_constraintStart_toStartOf="@+id/text_mail"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/image_dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/onboarding_bg01" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/text_mail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/bontserrat_bold"
                                    android:text="@string/dummy_mail"
                                    android:textColor="@color/black"
                                    android:textSize="13sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/cardView2" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:layout_marginTop="8dp"
                                    android:fontFamily="@font/bontserrat_bold"
                                    android:text="click one of the functions presented below to use it.\n***all your information are encrypted before being stored in our servers."
                                    android:textColor="@color/black"
                                    android:textSize="12sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/text_mail" />

                                <!--                        <include-->
                                <!--                            android:id="@+id/field1"-->
                                <!--                            layout="@layout/titled_edittext_layout"-->
                                <!--                            android:layout_width="match_parent"-->
                                <!--                            android:layout_height="wrap_content"-->
                                <!--                            app:layout_constraintEnd_toEndOf="parent"-->
                                <!--                            app:layout_constraintStart_toStartOf="parent"-->
                                <!--                            app:layout_constraintTop_toBottomOf="@+id/textView" />-->

                                <!--                        <include-->
                                <!--                            layout="@layout/titled_edittext_layout"-->
                                <!--                            android:layout_width="match_parent"-->
                                <!--                            android:layout_height="wrap_content"-->
                                <!--                            app:layout_constraintBottom_toBottomOf="parent"-->
                                <!--                            app:layout_constraintEnd_toEndOf="parent"-->
                                <!--                            app:layout_constraintStart_toStartOf="parent"-->
                                <!--                            app:layout_constraintTop_toBottomOf="@id/field1" />-->

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!--            <ImageView-->
                    <!--                android:layout_width="225dp"-->
                    <!--                android:layout_height="225dp"-->
                    <!--                android:layout_gravity="end|bottom"-->
                    <!--                android:layout_marginRight="21dp"-->
                    <!--                android:scaleType="centerCrop"-->
                    <!--                android:src="@drawable/najia"-->
                    <!--                app:layout_collapseMode="parallax" />-->

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/transparent"
                        android:padding="11dp"
                        app:layout_collapseMode="pin" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/image_menu"
                            android:layout_width="27dp"
                            android:layout_height="27dp"
                            android:layout_marginStart="17dp"
                            android:layout_marginTop="17dp"
                            android:layout_marginEnd="17dp"
                            android:layout_marginBottom="17dp"
                            android:src="@drawable/menu1"
                            app:tint="@color/greenishGrey" />

                        <!--                    <ImageView-->
                        <!--                        android:id="@+id/image_profile"-->
                        <!--                        android:layout_width="31dp"-->
                        <!--                        android:layout_height="31dp"-->
                        <!--                        android:layout_alignParentEnd="true"-->
                        <!--                        android:layout_margin="17dp"-->
                        <!--                        android:scaleType="fitEnd"-->
                        <!--                        android:src="@drawable/profile"-->
                        <!--                        app:tint="@color/black" />-->
                    </RelativeLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="17dp"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="11dp"
                        android:fontFamily="@font/bontserrat_bold"
                        android:text="all services:"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_margin="11dp"
                            android:layout_weight="50"
                            android:outlineAmbientShadowColor="@color/green"
                            android:outlineSpotShadowColor="@color/green"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="17dp"
                            app:cardElevation="3dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:id="@+id/textView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/bontserrat_bold"
                                    android:text="crop\nrecommendation"
                                    android:textColor="@color/black"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:includeFontPadding="false"
                                    android:isScrollContainer="true"
                                    android:text="get crop recommendation on the basis of weather data and analysis report of the forecast."
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView" />


                                <View
                                    android:id="@+id/view"
                                    android:layout_width="4dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/green"
                                    android:backgroundTint="@color/green"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_margin="11dp"
                            android:layout_weight="50"
                            android:outlineAmbientShadowColor="@color/green"
                            android:outlineSpotShadowColor="@color/green"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="17dp"
                            app:cardElevation="3dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:id="@+id/textView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/bontserrat_bold"
                                    android:text="disease\ndiagnosis"
                                    android:textColor="@color/black"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:includeFontPadding="false"
                                    android:text="identify the disease your crop is attacked with, just by capturing a picture of your crop and uploading it."
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView2" />


                                <View
                                    android:id="@+id/view2"
                                    android:layout_width="4dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/green"
                                    android:backgroundTint="@color/green"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="100"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_margin="11dp"
                            android:layout_weight="50"
                            android:outlineAmbientShadowColor="@color/green"
                            android:outlineSpotShadowColor="@color/green"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="17dp"
                            app:cardElevation="3dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:id="@+id/textView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/bontserrat_bold"
                                    android:text="soil\nidentification"
                                    android:textColor="@color/black"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:includeFontPadding="false"
                                    android:text="identify the soil type of your land, just by capturing a picture of the soil and uploading it."
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView3" />

                                <View
                                    android:id="@+id/view3"
                                    android:layout_width="4dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/green"
                                    android:backgroundTint="@color/green"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="175dp"
                            android:layout_margin="11dp"
                            android:layout_weight="50"
                            android:outlineAmbientShadowColor="@color/green"
                            android:outlineSpotShadowColor="@color/green"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="17dp"
                            app:cardElevation="3dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="0dp"
                                android:background="?selectableItemBackgroundBorderless"
                                android:clickable="true"
                                android:focusable="true">

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/bontserrat_bold"
                                    android:text="budget\nformulation"
                                    android:textColor="@color/black"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.0"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="11dp"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:includeFontPadding="false"
                                    android:text="get total aid in budget formulation for the next farming session."
                                    android:textSize="12sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/textView4" />

                                <View
                                    android:id="@+id/view4"
                                    android:layout_width="4dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/green"
                                    android:backgroundTint="@color/green"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>


        </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <View
            android:id="@+id/swipe_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:elevation="21dp" />

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/button_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="log out"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="?actionBarSize"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent=".5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintWidth_percent=".5">
<!--        ●-->
        <TextView
            android:id="@+id/text_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bontserrat_bold"
            android:text="profile"
            app:drawableTint="@color/black"
            android:drawablePadding="7dp"
            android:drawableStart="@drawable/person"
            android:textColor="@color/greenishGrey"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bontserrat_bold"
            android:text="● history"
            android:textColor="@color/greenishGrey"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/text_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11dp"
            android:background="?selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/bontserrat_bold"
            android:text="● logout"
            android:textColor="#9FFF0000"
            android:textSize="17sp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>